<% content_for :page_title do %>
  <%= plural_resource_name(Spree::ProductUpload) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new_upload), new_object_url, { class: 'btn-success', icon: 'add', id: 'admin_new_product_upload' } %>
<% end if can?(:create, Spree::Product) %>

<%= render partial: 'spree/admin/shared/index_table_options', locals: { collection: @collection } %>

<% if @collection.any? %>
  <table class="table" id="listing_product_uploads">
    <thead>
      <tr data-hook="admin_product_uploads_index_headers">
        <th>#</th>
        <th><%= Spree.t(:status) %></th>
        <th><%= Spree.t(:imported_products) %></th>
        <th><%= Spree.t(:created_at) %></th>
        <th data-hook="admin_products_index_header_actions" class="actions"></th>
      </tr>
    </thead>
    <tbody>
      <% @collection.each do |product_upload| %>
        <tr id="<%= spree_dom_id product_upload %>" class="<%= cycle('odd', 'even') %>">
          <td><%= product_upload.id %></td>
          <td class="status"><%= product_upload.state %> </td>
          <td><%= product_upload.imported_products %> </td>
          <td><%= product_upload.created_at %> </td>
          <td class="actions actions-3 text-right" data-hook="admin_products_index_row_actions">
            <%= link_to_delete product_upload, no_text: true %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-info no-objects-found">
    <%= Spree.t(:no_resource_found, resource: plural_resource_name(Spree::ProductUpload)) %>,
    <%= link_to Spree.t(:add_one), new_object_url if can?(:create, Spree::Product) %>!
  </div>
<% end %>

<%= render partial: 'spree/admin/shared/index_table_options', locals: { collection: @collection } %>
